<Page x:Class="JustR.Desktop.View.UserDialogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JustR.Desktop.View"
      xmlns:controls="clr-namespace:JustR.Desktop.Controls"
      xmlns:viewModels="clr-namespace:JustR.Desktop.ViewModel"
      xmlns:desktop="clr-namespace:JustR.Desktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserDialogsPage">
    <Page.DataContext>
        <viewModels:UserDialogsViewModel></viewModels:UserDialogsViewModel>
    </Page.DataContext>
    <Page.Resources>
        <desktop:TestConverter x:Key="Converter"></desktop:TestConverter>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" MinWidth="375"></ColumnDefinition>
            <ColumnDefinition Width="7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding DialogsPreview}" Grid.Column="0" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <ContentPresenter>
                        <ContentPresenter.Content>
                            <Binding Converter="{StaticResource Converter}" />
                        </ContentPresenter.Content>
                        <ContentPresenter.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.Test, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"></MouseBinding>
                        </ContentPresenter.InputBindings>
                    </ContentPresenter>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Frame Content="{Binding CurrentDialog}" Grid.Column="1"></Frame>
    </Grid>
</Page>
