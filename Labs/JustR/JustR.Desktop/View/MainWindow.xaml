<Window x:Class="JustR.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JustR.Desktop"
        xmlns:viewModels="clr-namespace:JustR.Desktop.ViewModel"
        xmlns:controls="clr-namespace:JustR.Desktop.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <StackPanel Orientation="Horizontal">
            <controls:MenuControl></controls:MenuControl>
            <ListBox>
                <controls:DialogPreviewControl></controls:DialogPreviewControl>
                <controls:DialogPreviewControl></controls:DialogPreviewControl>
                <controls:DialogPreviewControl></controls:DialogPreviewControl>
                <controls:DialogPreviewControl></controls:DialogPreviewControl>
                <controls:DialogPreviewControl></controls:DialogPreviewControl>
                <controls:DialogPreviewControl></controls:DialogPreviewControl>
            </ListBox>
            <Frame Content="{Binding CurrentDialog}">
            </Frame>
        </StackPanel>
    </Grid>
</Window>
