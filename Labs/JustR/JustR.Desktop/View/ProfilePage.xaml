<Page x:Class="JustR.Desktop.View.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JustR.Desktop.View"
      xmlns:viewModel="clr-namespace:JustR.Desktop.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">
    <Page.DataContext>
        <viewModel:ProfileViewModel></viewModel:ProfileViewModel>
    </Page.DataContext>
    <Grid>
        <StackPanel>
            <Image Source="{Binding Avatar}" Width="125" Height="125"></Image>
            <Button Width="125" Command="{Binding ChangeAvatarCommand}">Change Photo</Button>
            <TextBlock HorizontalAlignment="Center" Text="{Binding FirstName}"></TextBlock>
            <TextBlock HorizontalAlignment="Center" Text="{Binding LastName}"></TextBlock>
            <TextBlock HorizontalAlignment="Center" Text="{Binding UserTag}"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
