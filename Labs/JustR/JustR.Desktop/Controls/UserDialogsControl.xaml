<UserControl x:Class="JustR.Desktop.Controls.UserDialogsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JustR.Desktop.Controls"
             xmlns:viewModels="clr-namespace:JustR.Desktop.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Control.DataContext>
        <viewModels:UserDialogsViewModel></viewModels:UserDialogsViewModel>
    </Control.DataContext>

    <Grid>
        <ListBox ItemsSource="{Binding DialogsPreview}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:DialogPreviewControl></local:DialogPreviewControl>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
